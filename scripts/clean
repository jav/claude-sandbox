#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(dirname "$SCRIPT_DIR")"

cd "$ROOT_DIR"

echo "Stopping and removing container..."
docker compose down --rmi local -v 2>/dev/null || true

echo "Removing claude-sandbox image..."
docker rmi claude-sandbox:latest 2>/dev/null || true

echo "Clean complete."
echo "Note: Persistent home directory (volumes/home/) preserved. Remove manually if needed."
